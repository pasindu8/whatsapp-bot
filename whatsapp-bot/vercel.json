{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9" // Or python3.10, python3.11, python3.12 - use a specific version
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "installCommand": "pip install -r requirements.txt && apt-get update && apt-get install -y ffmpeg" // <<< මේ line එක එකතු කරන්න
}
